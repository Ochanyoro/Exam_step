<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <% if @current_user%>
        <% if @user.id == @current_user.id %>
          <%= link_to("編集", "/users/#{@user.id}/edit") %>
        <% end %>
      <% end %>
    </div>

    <!-- 指定されたコードを貼り付けてください -->
    <% @user.courses.each do |course| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/courses_images/#{course.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name-users">
            <%= link_to(course.name, "/courses/#{course.id}") %>
          </div>
        </div>
        <div class="aa">
          <%= link_to "チャットへ", room_path(course.room)%>
        </div>
      </div>
    <% end %>

  </div>
</div>
